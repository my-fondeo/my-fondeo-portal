---
import Navbar from "@components/landing/ui/Navbar.astro";
import Footer from "@components/landing/ui/Footer.astro";
import "../styles/landing.css";
import "../styles/normalize.css";
import AOSWrapper from "@components/AOSWrapper.jsx";
interface Props {
  description?: string;
  title?: string;
  tags?: string[];
  class?: string;
}

const currentRoute = Astro.url.pathname;

const {
  description = "My fondeo es la aplicaci√≥n de fondeo para apuestas deportivas #1.",
  title = "My Fondeo",
  tags = ["My fondeo", "fondeo", "apuesta deportiva"],
} = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <meta name="keywords" content={tags.join(", ")} />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Quicksand:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/x-icon" href="/mf.svg" />
    <title>{title ?? "My Fondeo"}</title>
  </head>
  <body>
    <Navbar />
    <main
      class="p-4 sm:p-6 md:p-8 lg:p-10 pt-[90px] sm:pt-[100px] md:pt-[110px] w-full max-w-7xl z-2 flex flex-col items-center gap-16 sm:gap-24 md:gap-32 lg:gap-48 pb-0 flex-1"
    >
      <AOSWrapper client:only />
      <slot />
    </main>
    {!currentRoute.includes("/auth") && <Footer />}
  </body>
</html>
