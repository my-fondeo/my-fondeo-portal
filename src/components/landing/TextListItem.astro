---
import { Image } from "astro:assets";
import indicator from "@assets/icon/text-list-item.png";
import indicatorDark from "@assets/icon/text-list-item-dark.png";

type TextListStyle = "normal" | "all-dark";

interface Props {
  className?: string;
  variant?: TextListStyle;
}

const { className = "", variant = "normal" } = Astro.props;
const width = variant == "normal" ? 40 : 32;
const image = variant == "normal" ? indicator : indicatorDark;
---

<li class={className}>
  <Image src={image} alt="" width={width} class="flex-shrink-0 w-8 sm:w-10 lg:w-12 h-auto" />

  <span class="text-sm sm:text-base">
    <slot />
  </span>
</li>

<style>
  @import "tailwindcss";
  li {
    @apply flex items-center list-none text-shadow-none gap-3;
    text-decoration: none;
  }
</style>


