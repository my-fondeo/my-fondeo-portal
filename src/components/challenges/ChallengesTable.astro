---

<div class="w-[125%] grid grid-cols-6 mt-12">
  <ChallengeLabels />
  <ChallengeCard
    totalAmount={2000}
    initialValues={defaultValues}
    client:visible
  />
  <ChallengeCard
    totalAmount={5000}
    initialValues={defaultValues}
    client:visible
  />
  <ChallengeCard
    totalAmount={10000}
    initialValues={defaultValues}
    client:visible
  />
  <ChallengeCard
    totalAmount={20000}
    initialValues={defaultValues}
    client:visible
  />
  <ChallengeCard
    totalAmount={50000}
    initialValues={defaultValues}
    client:visible
  />
</div>
